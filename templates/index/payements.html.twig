{% extends 'base.html.twig' %}

{% block title %}Payements
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{% if alerte is defined %}
		{{ alerte }}
	{% endif %}


	<a href="{{path('payement_create',{'contratId':contrat.id})}}" role="button" class="w3-btn w3-white w3-border w3-border-yellow w3-round-xlarge">Archiver un payement</a>


	

	<div class="w3-row w3-section">
		<div class="w3-col" style="width:50px">
		
		</div>
		<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="form">
			{% if contrat.MontantRestant > 0 %}
			<h2 class="w3-panel w3-red w3-card-4 w3-center">Montant restant à payer pour l'échéance en cours :{{contrat.MontantRestant}}	<i class="material-icons-outlined">
				euro_symbol
			</i></h2>
			{% elseif contrat.MontantRestant < 0 %}
			<h2 class="w3-panel w3-green w3-card-4 w3-center">Montant en excédant pour l'échéance en cours :{{contrat.MontantRestant}}	<i class="material-icons-outlined">
				euro_symbol
			</i></h2>
			{% else %}
			<h2 class="w3-panel w3-green w3-card-4 w3-center">Montant entièrement réglé pour l'échéance en cours :{{contrat.MontantRestant}}	<i class="material-icons-outlined">
				euro_symbol
			</i></h2>

			{% endif %}
			<h2 class="w3-center">Entrer un nouveau règlement</h2>
			<div>
				{{ form(form) }}
				
			</div>
		</div>


		<br>


		<h1>Liste des payements de
			{{ contrat.client.nom }}
			{{ contrat.client.prenom }}
			pour le contrat:
			{{ contrat.id }}
		</h1>

		{% for payement in payements %}
			{% if payement is not null %}


				<h2>payement :{{payement.id}}</h2>
				<table class="w3-table w3-bordered w3-centered ">
					<tr>
						<th>
							{% if payement.TypePayement == 'Payement'%}
							Payement
							{% else %}
							Remboursement
							{% endif %}

						</th>


						<th>Moyen payement</th>
						<th>Date</th>
					</tr>


					<tr>
						<td>{{payement.SommePayee}}</td>

						<td>
							{{payement.MoyenPayement}}


						</td>
						<td>
							{{payement.date|date('d/m/Y')}}
						</td>

					</tr>
				</table>
			{% endif %}

		{% endfor %}

	{% endblock %}
