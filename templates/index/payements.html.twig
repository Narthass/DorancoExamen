{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<h1>Liste des payements de
		{#{{ payements.contrat.client.nom }}
		{{ payements.contrat.client.prenom}} #}
	</h1>
	<td><a href="{{path('payement_create',{'contratId':contrat.id})}}" role="button" class="w3-btn w3-white w3-border w3-border-yellow w3-round-xlarge">Archiver un payement</a></td>
	{% for payement in payements %}
			{% if payement is not null %}	

		
			<h2>payement :{{payement.id}}</h2>
			<table class="w3-table w3-bordered w3-centered ">
				<tr>
					<th>Somme payee</th>

					
					<th>Moyen payement</th>
					<th>Date</th>
				</tr>


				<tr>
					<td>{{payement.SommePayee}}</td>
					
					<td>
						{{payement.MoyenPayement}}


					</td>
					<td>
					{{payement.date|date('d/m/Y')}}
					</td>
					
				</tr>
			</table>
			{% endif %}
		
	{% endfor %}

{% endblock %}
